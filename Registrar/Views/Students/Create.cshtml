@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h4>Add a new student</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date)

  @Html.Label("Select a Course")
  @Html.DropDownList("CourseId")

  @Html.Label("Select a Department")
  @Html.DropDownList("DepartmentId")

  <input type="submit" value="Add new Student" class="btn btn-default">
}

<p>@Html.ActionLink("Show all Students", "Index")</p>